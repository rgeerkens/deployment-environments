{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "type": "string",
      "metadata": {
        "description": "Name of the AKS cluster."
      }
    },
    "nodeCount": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Number of nodes in the cluster."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "dnsPrefix": "[toLower(concat('dns', uniqueString(resourceGroup().id)))]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2023-01-02-preview",
      "name": "[parameters('clusterName')]",
      "location": "[variables('location')]",
      "sku": {
                "name": "Basic",
                "tier": "Free"
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "dnsPrefix": "[variables('dnsPrefix')]",
        "enableRBAC": true,
        "agentPoolProfiles": [
          {
            "name": "agentpool",
            "count": "[parameters('nodeCount')]",
            "vmSize": "Standard_B4ms",
            "osDiskSizeGB": 128,
            "osDiskType": "Managed",
            "kubeletDiskType": "OS",
            "maxPods": 110,
            "type": "VirtualMachineScaleSets",
            "enableAutoScaling": false,
            "powerState": {
                "code": "Running"
            },
            "orchestratorVersion": "1.25.6",
            "enableNodePublicIP": false,
            "mode": "System",
            "osType": "Linux",
            "osSKU": "Ubuntu",
            "enableFIPS": false
          }
        ],
        "servicePrincipalProfile": {
                      "clientId": "msi"
        },
        "addonProfiles": {
            "azureKeyvaultSecretsProvider": {
                "enabled": false
            },
            "azurepolicy": {
                "enabled": false
            }
        }
      }
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
       "apiVersion": "2021-06-01",
      "name": "[concat(parameters('clusterName'), '-votingapp')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName'))]"
      ],
      "properties": {
        "containers": [
          {
            "name": "votingapp",
            "properties": {
              "image": "microsoft/azure-vote-front:v1",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 80
                }
              ],
              "environmentVariables": [
                {
                  "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                  "value": "false"
                }
              ]
            }
          }
        ],
        "identity": {
          "type": "SystemAssigned",
          "roleAssignments": [
            {
              "principalId": "[reference(concat('Microsoft.ContainerService/managedClusters/', parameters('clusterName'))).identity.principalId]",
              "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]"
            }
          ]
        },
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "TCP",
              "port": 80
            }
          ]
        },
        "osType": "Linux",
        "restartPolicy": "Always"
      }
    }
  ],
  "outputs": {
    "kubeConfig": {
      "type": "string",
      "value": "[reference(concat('Microsoft.ContainerService/managedClusters/', parameters('clusterName'))).kubeConfig]"
    }
  }
}
