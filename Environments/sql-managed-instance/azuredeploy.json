{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "managedSqlInstanceName": {
      "type": "string",
      "metadata": {
        "description": "Naam voor de beheerde SQL-instantie."
      }
    },
    "vnetResourceGroupName": {
      "type": "string",
      "defaultValue": "network-services",
      "metadata": {
        "description": "Naam van de resourcegroep waarin het virtuele netwerk (VNet) zich bevindt."
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "core-network",
      "metadata": {
        "description": "Naam van het bestaande virtuele netwerk (VNet)."
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "sql-instances",
      "metadata": {
        "description": "Naam van het bestaande subnet."
      }
    },
    "adminLogin": {
      "type": "string",
      "defaultValue": "ronny",
      "metadata": {
        "description": "Beheerdersloginnaam voor de beheerde SQL-instantie."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Beheerderswachtwoord voor de beheerde SQL-instantie."
      }
    }
  },
  "variables": {
    "vnetResourceId": "[resourceId(parameters('vnetResourceGroupName'), 'Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
    "subnetResourceId": "[concat(variables('vnetResourceId'), '/subnets/', parameters('subnetName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/managedInstances",
      "apiVersion": "2021-11-01-preview",
      "name": "[parameters('managedSqlInstanceName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "subnetId": "[variables('subnetResourceId')]",
        "administratorLogin": "[parameters('adminLogin')]",
        "administratorLoginPassword": "[parameters('adminPassword')]",
        "identity": {
          "type": "SystemAssigned"
        },
        "sku": {
          "name": "GP_Gen5",
          "tier": "GeneralPurpose",
          "family": "GP_Gen5",
          "capacity": 2,
          "vCores": 4,
          "licenseType": "LicenseIncluded"
        },
        "storageSizeInGB": 128
      }
    }
  ]
}
